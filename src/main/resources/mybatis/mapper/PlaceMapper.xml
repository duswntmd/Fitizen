<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sku.fitizen.mapper.PlaceMapper">

    <!-- 장소 삽입 -->
    <insert id="insertPlace" parameterType="com.sku.fitizen.domain.Place">
        INSERT INTO PLACES (ID, NAME, ROADADDRESS, ADDRESS, PHONE)
        VALUES (#{id}, #{name}, #{roadaddress}, #{address}, #{phone})
    </insert>

    <!-- 장소 조회 -->
    <select id="findPlaceByNameAndAddress" parameterType="map" resultType="com.sku.fitizen.domain.Place">
        SELECT * FROM PLACES WHERE NAME = #{name} AND ADDRESS = #{address}
    </select>

    <select id="findPlaceById" parameterType="long" resultType="com.sku.fitizen.domain.Place">
        SELECT * FROM PLACES WHERE ID = #{id}
    </select>

</mapper>
